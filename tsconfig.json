{"compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true, 
    "noImplicitAny": true, 
    "noImplicitThis": true,
    "noEmit": true, 
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": ["local_modules/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["**/*.ts", "**/*.tsx", "*.d.ts", "__tests__/**/*.ts", "__tests__/**/*.tsx"],
}